---
import BaseLayout from './BaseLayout.astro';
import Lightbox from '../components/Lightbox.astro';
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
    <p class="container-title-date"><span>{frontmatter.description}</span><span>{frontmatter.dates}</span></p>
    {frontmatter.github_url && (<div class="github-url"><a href={frontmatter.github_url} target="_blank" rel="noopener noreferrer">{frontmatter.github_url}</a> <i class="fas fa-external-link-alt" style="margin-left: 2px"></i></div>)}
    {frontmatter.github_url2 && (<div class="github-url"><a href={frontmatter.github_url2} target="_blank" rel="noopener noreferrer">{frontmatter.github_url2}</a> <i class="fas fa-external-link-alt" style="margin-left: 2px"></i></div>)}
    {frontmatter.image?.url && <><br/><img src={frontmatter.image.url} width={frontmatter.image.width} alt={frontmatter.image.alt} /></>}
    <Lightbox />
    <slot />
</BaseLayout>